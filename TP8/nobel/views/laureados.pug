extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container
                h1 Laureados
                table.w3-table-all
                            tr  
                                th Nome
                                th Ano
                                th Categoria
                            each l in lista
                                if(l.prize.length == 1)
                                    tr  
                                        td= l.firstname + ' ' + l.surname
                                        td= l.prize[0].year
                                        td= l.prize[0].category
                                else
                                    tr
                                        td= l.firstname + ' ' + l.surname
                                        each p in l.prize
                                            tr
                                                td= '-'
                                                td= p.year 
                                                td= p.category
