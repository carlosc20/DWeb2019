extends layout

block content
    .w3-container
        h1 Arquivo Sonoro de Ernesto Veiga de Oliveira
        .w3-card-4
            header.w3-container.w3-teal
                h3 Editar Música
            .w3-section.w3-container
                label.w3-teal
                    b Província
                input.w3-input.w3-border.w3-light-grey(id='prov' type='text' value=m.prov)
                label.w3-teal
                    b Local
                input.w3-input.w3-border.w3-light-grey(id='local' type='text' value=m.local)
                label.w3-teal
                    b Título
                input.w3-input.w3-border.w3-light-grey(id='tit' type='text' value=m.tit)
                label.w3-teal
                    b Músico
                input.w3-input.w3-border.w3-light-grey(id='musico' type='text' value=m.musico)
                label.w3-teal
                    b Duração
                input.w3-input.w3-border.w3-light-grey(id='duracao' type='text' value=m.duracao)
                button.w3-button.w3-blue-grey(onclick="editMusic('" + m.id + "')") Editar
            footer.w3-container.w3-teal.w3-padding-16
                a(href='/').w3-button.w3-blue-grey Cancelar