extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Nova Tarefa
            form.w3-container.w3-section(action='/tarefa' method='POST')
                .w3-section
                    label.w3-teal
                        b Tarefa
                    input.w3-input.w3-border.w3-light-grey(type='text' name='tarefa')
                .w3-section
                    label.w3-teal
                        b Data limite
                    input.w3-input.w3-border.w3-light-grey(type='date' name='data_limite')
                input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            header.w3-container.w3-teal
                h3 Lista de tarefas
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Tarefa
                        th Data limite
                    each t in lista
                        tr 
                            td= t.tarefa
                            td= t.data_limite
            footer.w3-container.w3-teal
                address Gerado por mim