extends layout

block content
  .w3-container
        .w3-card-4
            header.w3-container
                h1 Entidades
                .w3-container
                  p http://clav.dglab.gov.pt/
                table.w3-table-all
                    tr  
                        th Designação
                        th Sigla
                    each e in lista
                        tr
                            td 
                                a(class="w3-button" href='/entidades/' + e.id)= e.designacao
                            td= e.sigla